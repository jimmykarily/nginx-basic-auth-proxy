user nginx;
worker_processes ##WORKER_PROCESSES##;

error_log /dev/stdout info;
pid /var/run/nginx.pid;

events {
  worker_connections 1024;
}

http {
  access_log /dev/stdout;
  resolver 8.8.8.8;

  set $proxy_pass "https://s3.amazonaws.com/"
  # https://coderwall.com/p/rqdrwq/nginx-conf-query-string-processing
  # https://stackoverflow.com/questions/37136374/nginx-proxy-pass-dynamic-hostname-part?rq=1
  if ($query_string ~* "server=obs") {
      set $proxy_pass "https://download.opensuse.org/"
  }

  server {
    listen ##PORT##;
    server_name ##SERVER_NAME##;

    client_max_body_size ##CLIENT_MAX_BODY_SIZE##;
    proxy_read_timeout ##PROXY_READ_TIMEOUT##;

    include /etc/nginx/conf.d/*.conf;

    location / {
      proxy_pass $proxy_pass$request_uri;
      auth_basic "Restricted";
      auth_basic_user_file /etc/nginx/.htpasswd;

      proxy_set_header X-Forwarded-Host $host;
      # Do not pass Authorization header to destination
      proxy_set_header Authorization "";
    }
  }

  server {
    listen 8090;

    location /nginx_status {
      stub_status on;
      access_log off;
    }
  }
}
